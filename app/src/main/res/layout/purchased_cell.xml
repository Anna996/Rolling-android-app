<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardUseCompatPadding="true"
    app:elevation="5dp"
    app:cardCornerRadius="30dp"
    android:layout_marginStart="20dp"
    android:layout_marginBottom="20dp"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp"
        android:background="@drawable/purchased_cell_selector"
        android:id="@+id/purchased_linerLayout">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_alignParentStart="true"
                android:layout_marginBottom="10dp"
                android:src="@drawable/no_image"
                android:id="@+id/first_purchased_imageView"/>

            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_below="@id/first_purchased_imageView"
                android:layout_marginStart="30dp"
                android:layout_marginBottom="10dp"
                android:src="@drawable/no_image"
                android:id="@+id/second_purchased_imageView"/>

            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_below="@id/second_purchased_imageView"
                android:layout_marginStart="60dp"
                android:layout_marginBottom="10dp"
                android:src="@drawable/no_image"
                android:id="@+id/third_purchased_imageView"/>

        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center"
            android:text="$100"
            android:textSize="20sp"
            android:id="@+id/purchased_textView"/>

    </LinearLayout>

</androidx.cardview.widget.CardView>