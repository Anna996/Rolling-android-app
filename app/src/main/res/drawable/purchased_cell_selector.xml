<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_enabled="true">
        <shape android:shape="rectangle">
            <corners android:radius="30dp"/>
            <gradient
                android:startColor="@color/sky3"
                android:centerColor="@color/sky3"
                android:endColor="@color/sky2"
                android:angle="135"/>
        </shape>
    </item>

    <item android:state_enabled="false">
        <shape android:shape="rectangle">
            <stroke
                android:color="@color/green"
                android:width="2dp"/>
            <corners android:radius="30dp"/>
            <gradient
                android:startColor="@color/sky3"
                android:centerColor="@color/sky2"
                android:endColor="@color/sky1"
                android:angle="135"/>
        </shape>
    </item>

</selector>